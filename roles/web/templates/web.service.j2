[Unit]
Description=learnerd frontend

[Service]
Restart=always
Type=simple
User={{ app_user }}
Group={{ app_user }}
StandardOutput=syslog
SyslogIdentifier=web_learnerd
ExecStart=/bin/grunt --base {{ web_home }}/web_app --gruntfile {{ web_home }}/web_app/Gruntfile.js serve

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300

[Install]
WantedBy=multi-user.target
